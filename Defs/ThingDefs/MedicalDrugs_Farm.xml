<Plants>

  <ThingDef ParentName="PlantBase">
    <defName>PlantConoroFlower</defName>
    <label>Conoro flower</label>
    <description>Strange plant growing in the Rimworld. It can be crushed to make a powder that reduce pain. That powder can be refined to create a substance with the same attributes of morphine.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/PlantConoroFlower</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible>
      <nutrition>0.05</nutrition>
    </ingestible>
    <plant>
			<fertilitySensitivity>1.0</fertilitySensitivity>
			<growDays>5.5</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<reproduces>false</reproduces>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>ConoroFlower</harvestedThingDef>
			<harvestDestroys>true</harvestDestroys>
			<harvestYield>1</harvestYield>
			<sowMinSkill>8</sowMinSkill>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<!-- <sowResearchPrerequisites>
        <li>Healroot</li>
      </sowResearchPrerequisites>-->
			<topWindExposure>0.1</topWindExposure>
			<visualSizeRange>
        <min>0.3</min>
        <max>1.0</max>
      </visualSizeRange>
    </plant>
  </ThingDef>
